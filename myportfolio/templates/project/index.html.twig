{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    {% if projects|length <= 2 %}
        <div class="wrapper">
        {% else %}
            <div class="wrapper wrapper_project">     
    {% endif %}
        <div class="projects">
            <h1>Mes Projets</h1>
            <div class="project_container">
                {% for project in projects %}
                    <div class="project_card">
                        <img src="{{ asset('pictures/' ~ project.image) }}" alt="">
                        <div class="project_card__name">
                            <div class="button_container">
                                <a class="btn_card" href="{{ path('project_show', {'id': project.id}) }}) }}">{{ project.name }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
